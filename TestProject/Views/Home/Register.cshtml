@model TestProject.Models.UserModel
@{
    ViewBag.Title = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Advanced Field Solutions Case Question</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestProject.styles.css" asp-append-version="true" />
</head>
<body>

<div style ="text-align: center; margin : auto; margin-top: 50px; width: 50%; border : solid; border-radius: 25px; padding: 50px; border-color : white; box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;">
    
     <h2>Register</h2>
    @using (Html.BeginForm("Register", "Home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UserMail)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UserMail, new { @class = "form-control" })</div>
        </div><br />
        
        <input type="submit" value="Register" class="btn btn-primary" />
        <script>
            window.onload = function () { 
                
                alert("Success");
           
            };  
        </script>
    }
     @if (@ViewBag.Error != null)  
    {  
        <script type="text/javascript">  
            setTimeout(function() { alert("@ViewBag.Error"); }, 50);
            window.onload = function () { 
                
                setTimeout;
           
            };  
        </script>  
    }  

    <br/>

        <ul class="nav navbar-nav">
                   <li>  @Html.ActionLink("Go back login page", "Index", "Home")</li>
            </ul>

    <footer class="border-top footer text-muted">
        <div class="container">
            Please check your mail box after register.
        </div>
    </footer>

</div>



    
    
</body>
</html>



