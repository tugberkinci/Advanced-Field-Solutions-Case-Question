@model TestProject.Models.UserTokenModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
   <div style ="text-align: center; margin : auto; margin-top: 50px; width: 50%; border : solid; border-radius: 25px; padding: 50px; border-color : white; box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;">
    
        <h2>Log In</h2>
        @using (Html.BeginForm("Login", "Account"))
        {
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="row">
                <!--Show details are saved successfully message-->
                <div class="col-lg-12">@ViewBag.Message</div>
            </div><br />
       
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Token)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Token, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Secret)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Secret, new { @class = "form-control", type="Password" })</div>
            </div><br />
            <input type="submit" value="Login" class="btn btn-primary" />
        }
        @if (@ViewBag.Error != null)  
        {  
            <script type="text/javascript">  
                setTimeout(function() { alert("@ViewBag.Error"); }, 50);
                window.onload = function () { 
                
                    setTimeout;
           
                };  
            </script>  
        }  
   

        <br/>
    
            <ul class="nav navbar-nav">
                   <li>  @Html.ActionLink("Register", "Register", "Home")</li>
            </ul>
               
       <br/>
                 
       <footer class="border-top footer text-muted">
            <div class="container">
                Please register If you don't have Token and Secret key.
            </div>
        </footer>
                </div>
</div>
